                const brandItem = document.createElement('div');
                brandItem.className = 'brand-item';
                brandItem.setAttribute('data-category', brand.category);
                brandItem.setAttribute('title', `Ø§Ù†Ù‚Ø± Ù„Ø¹Ø±Ø¶ Ù…Ù†ØªØ¬Ø§Øª ${brand.name}`);
