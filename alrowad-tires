                    });
                    
                    // ØªØµÙÙŠØ© Ø§Ù„Ù…Ù†ØªØ¬Ø§Øª
                    filterProductsByCategory(category, brandName);
                    
                    // Ø§Ù„ØªÙ…Ø±ÙŠØ± Ø¥Ù„Ù‰ Ù‚Ø³Ù… Ø§Ù„Ù…Ù†ØªØ¬Ø§Øª
