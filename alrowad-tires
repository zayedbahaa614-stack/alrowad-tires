                window.location.href = `tel:${storeInfo.phone}`;
            }
        }

        function showProductDetails(productId) {
            const product = findProductById(productId);
            if (!product) {
                showToast('Ø­Ø¯Ø« Ø®Ø·Ø£ ÙÙŠ Ø§Ù„Ø¹Ø«ÙˆØ± Ø¹Ù„Ù‰ Ø§Ù„Ù…Ù†ØªØ¬');
                return;
