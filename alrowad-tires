                details += `ğŸ­ Ø§Ù„Ù…Ø§Ø±ÙƒØ§Øª Ø§Ù„Ù…ØªÙˆÙØ±Ø©: ${product.brands.join(', ')}\n`;
            }
            
            details += `\nğŸ“ ${product.description}\n\n`;
            details += `â­ Ø§Ù„ØªÙ‚ÙŠÙŠÙ…: ${product.rating}/5\n`;
            details += `âœ… Ø§Ù„Ø­Ø§Ù„Ø©: ${product.stock}\n`;
            details += `ğŸ›¡ï¸ ${product.warranty}\n`;
            details += `ğŸšš ${product.delivery}`;
            
            alert(details);
        }

        // Ø§Ù„Ø¨Ø­Ø« Ø¹Ù† Ù…Ù†ØªØ¬ Ø¨Ø§Ù„Ø±Ù‚Ù…
        function findProductById(productId) {
            const allProducts = [
                ...productsData.tires,
                ...productsData.batteries,
                ...productsData.rims
            ];
            
            return allProducts.find(product => product.id === productId);
        }

        // Ø¹Ø±Ø¶ Ø±Ø³Ø§Ù„Ø© ØªØ£ÙƒÙŠØ¯
        function showToast(message) {
