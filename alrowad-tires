            details += `ğŸ“¦ Ø§Ù„Ø§Ø³Ù…: ${product.name}\n`;
            details += `ğŸ·ï¸ Ø§Ù„ÙØ¦Ø©: ${getCategoryName(product.category)} - ${product.subcategory}\n`;
            details += `ğŸ’° Ø§Ù„Ø³Ø¹Ø±: ${product.price} Ø¬.Ù…`;
            
