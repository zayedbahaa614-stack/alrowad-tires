        // ØªÙ‡ÙŠØ¦Ø© Ø§Ù„Ø¨Ø­Ø«
        function initSearch() {
            const searchInput = document.getElementById('searchInput');
            const searchBtn = document.getElementById('searchBtn');
            
            searchBtn.addEventListener('click', performSearch);
            searchInput.addEventListener('keyup', function(event) {
                if (event.key === 'Enter') {
                    performSearch();
                }
            });
            
            // Ø¥Ø¶Ø§ÙØ© Ø®Ø§ØµÙŠØ© Ø§Ù„Ø¨Ø­Ø« Ø£Ø«Ù†Ø§Ø¡ Ø§Ù„ÙƒØªØ§Ø¨Ø©
            let searchTimeout;
            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(performSearch, 500);
            });
        }

        // ØªÙ†ÙÙŠØ° Ø§Ù„Ø¨Ø­Ø«
        function performSearch() {
            const searchTerm = document.getElementById('searchInput').value.trim().toLowerCase();
            const productsGrid = document.getElementById('productsGrid');
            const allProducts = document.querySelectorAll('.product-card');
            
            if (!searchTerm) {
                // Ø¥Ø°Ø§ ÙƒØ§Ù† Ø­Ù‚Ù„ Ø§Ù„Ø¨Ø­Ø« ÙØ§Ø±ØºØ§Ù‹ØŒ Ø¹Ø±Ø¶ Ø¬Ù…ÙŠØ¹ Ø§Ù„Ù…Ù†ØªØ¬Ø§Øª
                allProducts.forEach(product => {
                    product.style.display = 'block';
                });
                return;
            }
            
            let foundProducts = 0;
            
            allProducts.forEach(product => {
                const title = product.querySelector('.product-title').textContent.toLowerCase();
                const description = product.querySelector('.product-description').textContent.toLowerCase();
                const category = product.getAttribute('data-category');
                const specs = product.querySelector('.product-specs').textContent.toLowerCase();
                
                if (title.includes(searchTerm) || description.includes(searchTerm) || 
                    specs.includes(searchTerm) || getCategoryName(category).includes(searchTerm)) {
                    product.style.display = 'block';
                    foundProducts++;
                    
                    // Ø¥Ø¶Ø§ÙØ© ØªØ£Ø«ÙŠØ± ØªÙ…ÙŠÙŠØ² Ù„Ù„Ù†Øµ Ø§Ù„Ù…Ø·Ø§Ø¨Ù‚
                    highlightText(product, searchTerm);
                } else {
                    product.style.display = 'none';
                }
            });
            
            // Ø¹Ø±Ø¶ Ø±Ø³Ø§Ù„Ø© Ø¥Ø°Ø§ Ù„Ù… ÙŠØªÙ… Ø§Ù„Ø¹Ø«ÙˆØ± Ø¹Ù„Ù‰ Ù…Ù†ØªØ¬Ø§Øª
            if (foundProducts === 0) {
                showToast(`Ù„Ù… ÙŠØªÙ… Ø§Ù„Ø¹Ø«ÙˆØ± Ø¹Ù„Ù‰ Ù…Ù†ØªØ¬Ø§Øª ØªØ·Ø§Ø¨Ù‚ "${searchTerm}"`);
            } else {
                showToast(`ØªÙ… Ø§Ù„Ø¹Ø«ÙˆØ± Ø¹Ù„Ù‰ ${foundProducts} Ù…Ù†ØªØ¬`);
            }
        }

        // ØªÙ…ÙŠÙŠØ² Ø§Ù„Ù†Øµ ÙÙŠ Ù†ØªØ§Ø¦Ø¬ Ø§Ù„Ø¨Ø­Ø«
        function highlightText(element, searchTerm) {
            const title = element.querySelector('.product-title');
            const description = element.querySelector('.product-description');
            
            const highlight = (text, term) => {
                if (!term) return text;
                const regex = new RegExp(`(${term})`, 'gi');
                return text.replace(regex, '<mark style="background: #ffeb3b; padding: 0 2px; border-radius: 2px;">$1</mark>');
            };
            
            title.innerHTML = highlight(title.textContent, searchTerm);
            description.innerHTML = highlight(description.textContent, searchTerm);
        }

        // ØªÙ‡ÙŠØ¦Ø© ØªØµÙÙŠØ© Ø§Ù„Ù…Ù†ØªØ¬Ø§Øª
        function initProductFilter() {
            const categoryTabs = document.querySelectorAll('.category-tab');
            const specsTabs = document.querySelectorAll('.specs-tab');
            
            // ØªØµÙÙŠØ© Ø­Ø³Ø¨ Ø§Ù„ÙØ¦Ø©
            categoryTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    const category = this.getAttribute('data-category');
                    
                    // ØªØ­Ø¯ÙŠØ« Ø§Ù„Ø£Ø²Ø±Ø§Ø± Ø§Ù„Ù†Ø´Ø·Ø©
                    categoryTabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    
                    // ØªØµÙÙŠØ© Ø§Ù„Ù…Ù†ØªØ¬Ø§Øª
                    filterProductsByCategory(category);
                    
                    // Ø¹Ø±Ø¶ Ø±Ø³Ø§Ù„Ø©
                    let message = "Ø¹Ø±Ø¶ Ø¬Ù…ÙŠØ¹ Ø§Ù„Ù…Ù†ØªØ¬Ø§Øª";
                    if (category !== 'all') {
                        message = `Ø¹Ø±Ø¶ ${getCategoryName(category)}`;
                    }
                    showToast(message);
                });
            });
            
            // ØªØ¨Ø¯ÙŠÙ„ ØªØ¨ÙˆÙŠØ¨Ø§Øª Ø§Ù„Ù…Ù‚Ø§Ø³Ø§Øª
            specsTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    const specType = this.getAttribute('data-spec');
                    
                    // ØªØ­Ø¯ÙŠØ« Ø§Ù„Ø£Ø²Ø±Ø§Ø± Ø§Ù„Ù†Ø´Ø·Ø©
                    specsTabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Ø¥Ø¸Ù‡Ø§Ø± Ø§Ù„Ù…Ø­ØªÙˆÙ‰ Ø§Ù„Ù…Ù†Ø§Ø³Ø¨
                    document.querySelectorAll('.specs-content').forEach(content => {
                        content.classList.remove('active');
                    });
                    document.getElementById(specType).classList.add('active');
                });
            });
        }

        // ØªØµÙÙŠØ© Ø§Ù„Ù…Ù†ØªØ¬Ø§Øª Ø­Ø³Ø¨ Ø§Ù„ÙØ¦Ø© ÙˆØ§Ù„Ù…Ø§Ø±ÙƒØ©
        function filterProductsByCategory(category, brand = null) {
            const productsGrid = document.getElementById('productsGrid');
            const allProducts = document.querySelectorAll('.product-card');
            
            // Ø¥Ø¹Ø§Ø¯Ø© ØªØ¹ÙŠÙŠÙ† ØªÙ…ÙŠÙŠØ² Ø§Ù„Ø¨Ø­Ø«
            document.getElementById('searchInput').value = '';
            allProducts.forEach(product => {
                const title = product.querySelector('.product-title');
                const description = product.querySelector('.product-description');
                title.innerHTML = title.textContent;
                description.innerHTML = description.textContent;
            });
            
            if (category === 'all') {
                allProducts.forEach(product => {
                    product.style.display = 'block';
                });
            } else if (category === 'offers') {
                allProducts.forEach(product => {
                    if (product.querySelector('.product-badge')) {
                        product.style.display = 'block';
                    } else {
                        product.style.display = 'none';
                    }
                });
            } else {
                allProducts.forEach(product => {
                    const productCategory = product.getAttribute('data-category');
                    
                    if (productCategory === category) {
                        // Ø¥Ø°Ø§ ØªÙ… ØªØ­Ø¯ÙŠØ¯ Ù…Ø§Ø±ÙƒØ© Ù…Ø¹ÙŠÙ†Ø©
                        if (brand) {
                            const productName = product.querySelector('.product-title').textContent;
                            if (productName.toLowerCase().includes(brand.toLowerCase())) {
                                product.style.display = 'block';
                            } else {
                                product.style.display = 'none';
                            }
                        } else {
                            product.style.display = 'block';
                        }
                    } else {
                        product.style.display = 'none';
                    }
                });
            }
            
            // Ø¥Ø¶Ø§ÙØ© ØªØ£Ø«ÙŠØ± Ø¹Ù†Ø¯ Ø§Ù„ØªØµÙÙŠØ©
            productsGrid.style.opacity = '0.7';
            setTimeout(() => {
                productsGrid.style.opacity = '1';
            }, 300);
        }

        // ØªÙ‡ÙŠØ¦Ø© Ø§Ù„ØªÙ…Ø±ÙŠØ± Ø§Ù„Ø³Ù„Ø³
        function initSmoothScroll() {
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const targetId = this.getAttribute('href');
                    if (targetId === '#') return;
                    
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        // Ø§Ù„ØªÙ…Ø±ÙŠØ± Ø§Ù„Ø³Ù„Ø³
                        window.scrollTo({
                            top: targetElement.offsetTop - 100,
                            behavior: 'smooth'
                        });
                    }
                });
            });
        }

        // ØªÙ‡ÙŠØ¦Ø© Ø²Ø± Ø§Ù„Ø¹ÙˆØ¯Ø© Ù„Ù„Ø£Ø¹Ù„Ù‰
        function initBackToTop() {
            const backToTopBtn = document.getElementById('backToTop');
            
            window.addEventListener('scroll', function() {
                if (window.scrollY > 500) {
                    backToTopBtn.classList.add('show');
                } else {
                    backToTopBtn.classList.remove('show');
                }
            });
            
            backToTopBtn.addEventListener('click', function(e) {
                e.preventDefault();
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });
        }

        // ØªØ­Ø¯ÙŠØ« Ø§Ù„Ù‚Ø§Ø¦Ù…Ø© Ø§Ù„Ù†Ø´Ø·Ø©
        function updateActiveNavLink() {
            const sections = document.querySelectorAll('section[id]');
            const navLinks = document.querySelectorAll('.nav-links a');
            
            let currentSection = '';
            sections.forEach(section => {
                const sectionTop = section.offsetTop - 150;
                const sectionHeight = section.clientHeight;
                if (window.scrollY >= sectionTop && window.scrollY < sectionTop + sectionHeight) {
                    currentSection = section.getAttribute('id');
                }
            });
            
            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === `#${currentSection}`) {
                    link.classList.add('active');
                }
            });
        }

        // ØªØ£Ø«ÙŠØ± Ø§Ù„ØªÙ…Ø±ÙŠØ± Ø¹Ù„Ù‰ Ø§Ù„Ù‡ÙŠØ¯Ø±
        function handleHeaderScroll() {
            const header = document.querySelector('.main-header');
            const nav = document.querySelector('.main-nav');
            
            if (window.scrollY > 100) {
                header.style.boxShadow = '0 4px 25px rgba(0,0,0,0.25)';
                header.style.padding = '0.8rem 0';
                nav.style.top = '78px';
            } else {
                header.style.boxShadow = '0 4px 20px rgba(0,0,0,0.15)';
                header.style.padding = '1.2rem 0';
                nav.style.top = '82px';
            }
        }

