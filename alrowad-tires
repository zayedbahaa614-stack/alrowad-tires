        // ØªÙ‡ÙŠØ¦Ø© Ø§Ù„Ù‚Ø§Ø¦Ù…Ø© Ø§Ù„Ù…ØªÙ†Ù‚Ù„Ø©
        function initMobileMenu() {
            const mobileMenuBtn = document.getElementById('mobileMenuBtn');
            const navLinks = document.getElementById('navLinks');
            
            mobileMenuBtn.addEventListener('click', function() {
                navLinks.classList.toggle('active');
                this.innerHTML = navLinks.classList.contains('active') ? 
                    '<i class="fas fa-times"></i>' : 
                    '<i class="fas fa-bars"></i>';
            });
            
            // Ø¥ØºÙ„Ø§Ù‚ Ø§Ù„Ù‚Ø§Ø¦Ù…Ø© Ø¹Ù†Ø¯ Ø§Ù„Ù†Ù‚Ø± Ø¹Ù„Ù‰ Ø±Ø§Ø¨Ø·
            document.querySelectorAll('.nav-links a').forEach(link => {
                link.addEventListener('click', function() {
                    navLinks.classList.remove('active');
                    mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
                });
            });
            
            // Ø¥ØºÙ„Ø§Ù‚ Ø§Ù„Ù‚Ø§Ø¦Ù…Ø© Ø¹Ù†Ø¯ Ø§Ù„Ù†Ù‚Ø± Ø®Ø§Ø±Ø¬Ù‡Ø§
            document.addEventListener('click', function(event) {
                if (!navLinks.contains(event.target) && !mobileMenuBtn.contains(event.target)) {
                    navLinks.classList.remove('active');
                    mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
                }
            });
        }

        // ØªØ­Ù…ÙŠÙ„ Ø¬Ù…ÙŠØ¹ Ø§Ù„Ù…Ù†ØªØ¬Ø§Øª
        function loadAllProducts() {
            const productsGrid = document.getElementById('productsGrid');
            productsGrid.innerHTML = '';
            
            // Ø¯Ù…Ø¬ Ø¬Ù…ÙŠØ¹ Ø§Ù„Ù…Ù†ØªØ¬Ø§Øª
            const allProducts = [
                ...productsData.tires,
                ...productsData.batteries,
                ...productsData.rims
            ];
            
            // Ø¹Ø±Ø¶ Ø¬Ù…ÙŠØ¹ Ø§Ù„Ù…Ù†ØªØ¬Ø§Øª
            allProducts.forEach(product => {
                productsGrid.appendChild(createProductCard(product));
            });
        }

        // Ø¥Ù†Ø´Ø§Ø¡ Ø¨Ø·Ø§Ù‚Ø© Ù…Ù†ØªØ¬
        function createProductCard(product) {
            const card = document.createElement('div');
            card.className = 'product-card';
            card.setAttribute('data-category', product.category);
            card.setAttribute('data-id', product.id);
            
            // ØªØ­Ø¯ÙŠØ¯ Ø§Ù„Ø¨Ø§Ø¯Ø¬Ø©
            let badgeHtml = '';
            if (product.badge) {
                badgeHtml = `<div class="product-badge ${product.badge}">${getBadgeText(product.badge)}</div>`;
            }
            
            // ØªØ­Ø¯ÙŠØ¯ Ø§Ù„ØµÙˆØ±Ø© Ø¨Ù†Ø§Ø¡Ù‹ Ø¹Ù„Ù‰ Ø§Ù„ÙØ¦Ø©
            let imageSrc = getProductImage(product.category, product.subcategory);
            
            // ØªØ­Ø¯ÙŠØ¯ Ø§Ù„Ù…Ù‚Ø§Ø³Ø§Øª Ø£Ùˆ Ø§Ù„Ø³Ø¹Ø§Øª
            let specsHtml = '';
            if (product.sizes) {
                product.sizes.forEach(size => {
                    specsHtml += `<span class="spec-item">${size}</span>`;
                });
            } else if (product.capacities) {
                product.capacities.forEach(capacity => {
                    specsHtml += `<span class="spec-item">${capacity}</span>`;
                });
            }
            
            // ØªØ­Ø¯ÙŠØ¯ Ø§Ù„Ø³Ø¹Ø± Ø§Ù„Ù‚Ø¯ÙŠÙ…
            let oldPriceHtml = '';
            let discountBadge = '';
            if (product.oldPrice) {
                const discount = Math.round(((product.oldPrice - product.price) / product.oldPrice) * 100);
                oldPriceHtml = `<span class="old-price">${product.oldPrice} Ø¬.Ù…</span>`;
                discountBadge = `<span class="discount-badge">${discount}%</span>`;
            }
            
            // ØªÙ‚ÙŠÙŠÙ… Ø§Ù„Ù†Ø¬ÙˆÙ…
            let ratingHtml = '';
            if (product.rating) {
                ratingHtml = `<div class="rating">${getStarRating(product.rating)}</div>`;
            }
            
            card.innerHTML = `
                ${badgeHtml}
                <div class="product-image">
                    <img src="${imageSrc}" alt="${product.name}" loading="lazy">
                </div>
                <div class="product-info">
                    <span class="product-category">${getCategoryName(product.category)} â€¢ ${product.subcategory}</span>
                    <h3 class="product-title">${product.name}</h3>
                    ${ratingHtml}
                    <p class="product-description">${product.description}</p>
                    <div class="product-specs">
                        ${specsHtml}
                    </div>
                    <div class="price-section">
                        <div>
                            ${discountBadge}
                            <span class="current-price">${product.price} Ø¬.Ù…</span>
                            ${oldPriceHtml}
                        </div>
                        <span class="price-note">${product.stock}</span>
                    </div>
                    <div class="product-actions">
                        <button class="btn-action btn-whatsapp" onclick="orderViaWhatsapp(${product.id})">
                            <i class="fab fa-whatsapp"></i> Ø·Ù„Ø¨
                        </button>
                        <button class="btn-action btn-call-now" onclick="callForProduct(${product.id})">
                            <i class="fas fa-phone"></i> Ø§Ø³ØªÙØ³Ø§Ø±
                        </button>
                        <button class="btn-action btn-details" onclick="showProductDetails(${product.id})">
                            <i class="fas fa-info-circle"></i> ØªÙØ§ØµÙŠÙ„
                        </button>
                    </div>
                </div>
            `;
            
            return card;
        }

