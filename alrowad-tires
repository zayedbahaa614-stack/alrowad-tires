                const discount = Math.round(((product.oldPrice - product.price) / product.oldPrice) * 100);
                details += ` (ØªØ®ÙÙŠØ¶ ${discount}%)\n`;
            } else {
                details += `\n`;
            }
            
            if (product.sizes) {
                details += `ğŸ“ Ø§Ù„Ù…Ù‚Ø§Ø³Ø§Øª Ø§Ù„Ù…ØªÙˆÙØ±Ø©: ${product.sizes.join(', ')}\n`;
